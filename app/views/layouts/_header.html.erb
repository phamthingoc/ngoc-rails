<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to "sample app", "#", id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("static_pages.home.title"), root_path %></li>
      <li><%= link_to t("static_pages.help.title"), help_path %></li>
      <li><%= link_to t("static_pages.login.title"), login_path %></li>
      <li><%= link_to t("static_pages.lang.en"), locale:"en" %></li>
      <li><%= link_to t("static_pages.lang.vi"), locale:"vi" %></li>
      <% if logged_in? %>
          <li><%= link_to t("static_pages.users.current.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("static_pages.users.current.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.users.new.profile"), current_user %></li>
              <li><%= link_to t("static_pages.users.new.setting"), user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.users.new.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.users.new.log_in"), login_path %></li>
        <% end %>
      </ul>
  </nav>
</div>
</header>
